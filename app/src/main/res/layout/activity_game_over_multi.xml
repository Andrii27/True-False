<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_over_multi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="com.example.andri.trueorfalse1.GameOverMultiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resultTV2"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/resIV2"
                android:rotation="180"
                android:text="Перемога!"
                android:textStyle="bold"
                android:textSize="50sp"
                android:textColor="@color/trueColor"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/winner"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:id="@+id/resIV2"
                android:rotation="180"/>

        </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonTextColor"
        android:text="" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/loser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/resIV1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resultTV1"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/resIV1"
                android:text="Поразка!"
                android:textStyle="bold"
                android:textSize="50sp"
                android:textColor="@color/falseColor"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
